{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "king-ezekiel-academy-nextjs/.next",
  "installCommand": "npm run install-all",
  "framework": "nextjs",
  "functions": {
    "king-ezekiel-academy-nextjs/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/payments/flutterwave/webhook",
      "destination": "/api/payments/flutterwave/webhook"
    }
  ]
}
