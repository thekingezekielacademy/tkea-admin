{
  "security": {
    "ddosProtection": {
      "enabled": true,
      "level": "standard",
      "rateLimit": {
        "requests": 1000,
        "window": "1m"
      }
    },
    "firewall": {
      "enabled": true,
      "rules": [
        {
          "action": "allow",
          "source": "all",
          "condition": {
            "userAgent": {
              "contains": ["bot", "crawler", "spider"]
            }
          }
        }
      ]
    },
    "headers": {
      "security": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  }
}
